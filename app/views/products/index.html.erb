<h1>Listing products</h1>

<table>
  <tr>
    <th>Product dtl</th>
    <th>Product display</th>
    <th>Product name en</th>
    <th>Product name th</th>
    <th>Product name initial</th>
    <th>Color</th>
    <th>Size detail</th>
    <th>Thickness</th>
    <th>Thickness min</th>
    <th>Thickness rep</th>
    <th>Film size</th>
    <th>Est weight</th>
    <th>Est weight min</th>
    <th>Actual weight</th>
    <th>Accounting weight</th>
    <th>Piece per pack</th>
    <th>Piece per truck</th>
    <th>Wage per kilo</th>
    <th>Weight display</th>
    <th>In production</th>
    <th>Perct of films</th>
    <th>Default vat</th>
    <th>Product type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.product_dtl_id %></td>
    <td><%= product.product_display_id %></td>
    <td><%= product.product_name_en %></td>
    <td><%= product.product_name_th %></td>
    <td><%= product.product_name_initial %></td>
    <td><%= product.color %></td>
    <td><%= product.size_detail %></td>
    <td><%= product.thickness %></td>
    <td><%= product.thickness_min %></td>
    <td><%= product.thickness_rep %></td>
    <td><%= product.film_size %></td>
    <td><%= product.est_weight %></td>
    <td><%= product.est_weight_min %></td>
    <td><%= product.actual_weight %></td>
    <td><%= product.accounting_weight %></td>
    <td><%= product.piece_per_pack %></td>
    <td><%= product.piece_per_truck %></td>
    <td><%= product.wage_per_kilo %></td>
    <td><%= product.weight_display %></td>
    <td><%= product.in_production %></td>
    <td><%= product.perct_of_films %></td>
    <td><%= product.default_vat %></td>
    <td><%= product.product_type %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

