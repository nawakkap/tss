<%= simple_form_for(@slit_spec) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :slit_spec_id %>
    <%= f.input :slit_sub_no %>
    <%= f.input :slit_thickness %>
    <%= f.input :slit_qty %>
    <%= f.input :slit_width %>
    <%= f.input :product_dtl_id %>
    <%= f.input :remark %>
    <%= f.input :ratio %>
    <%= f.input :type %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
